<div class= "container">
  <h1>Questões</h1>

    <table class="table">
      <thead class="thead-light">
        <tr>
          <th >ID</th>
          <th >Descrição</th>
          <th >Assunto</th>
          <th>
            <%= link_to new_admins_backoffice_question_path, class: "btn btn-primary btn-just-icon btn-sm" do %>
              <i class="fa fa-plus"></i>
            <% end %>
          <th>
        </tr>
      </thead>
      <tbody>
      <% @questions.each do  |question|%>
        <tr>
          <td> <%= question.id %></td>
          <td> <%= question.content.truncate(50) %></td>
          <td> <%= question.subject.description.truncate(20) %></td>
          <td >

            <%= link_to edit_admins_backoffice_question_path(question), class: "btn btn-success btn-just-icon btn-sm" do %>
              <i class="fa fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_question_path(question), class:"btn btn-danger btn-just-icon btn-sm", method: :delete, :confirm => "Vai Excluir ?" do %>
                <i class="fa fa-trash"></i>
            <% end %>
        </td>
        </tr>
      <%end%>
      </tbody>
    </table>

</div>
<div class="pagination justify-content-center">
      <%= paginate @questions %>
</div>
